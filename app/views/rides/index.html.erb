<style>
table, td, th {    
    border: 1px solid #ddd;
    text-align: left;
}

table {
    border-collapse: collapse;
    width: 100%;
}

th, td {
    padding: 15px;
}
</style>
<p id="notice"><%= notice %></p>

<%= button_to "Refresh", rides_path, :method => :get %>

<h1>Dashboard</h1>

<table>
  <thead>
    <tr>
      <th>RequestID</th>
      <th>CustomerID</th>
      <th>Time Elapsed</th>
      <th>Status</th>
      <th>Driver</th>
    </tr>
  </thead>

  <tbody>
    <% @rides.each do |ride| %>
      <tr>
        <td><%= ride.id %></td>
        <td><%= ride.customer.id %></td>
        <td><%= ((Time.now).sec - (ride.created_at).sec) %></td>
        <td><%= ride.status %></td>
        <% if ride.driver_id %>
        <td><%= ride.driver_id %></td>
        <% else %>
        <td><%= "none" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

